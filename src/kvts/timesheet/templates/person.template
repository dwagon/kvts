{% extends "base.html" %}
{% block content %}
<h1> Days for {{person}} </h1>

<a href="{% url 'newday' person.id %}">Add Date</a>
<div class="container">
  <div class="list-group">
{% for day in days %}
<a class="list-group-item list-group-item-action" href="{% url 'personday' person.id day.id %}">{{day.weekday}} {{day.day}}</a>
{% endfor %}
</div>
</div>
{% endblock %}
