{% extends "base.html" %}
{% load django_bootstrap_breadcrumbs %}

{% block breadcrumbs %}
{{ block.super }}
{% breadcrumb_safe "<i class='icon-home'></i>Home" "index" %}
{% endblock %}

{% block content %}
{% render_breadcrumbs %}
<h1>Timesheets</h1>
{% if user.is_authenticated %}
<div class="container">
  <div class="list-group">
{% for person in people %}
<a class="list-group-item list-group-item-action" href="{% url 'person' person.id %}">{{person.name}}</a>
{% endfor %}
  </div>
</div>
{% else %}
<a href="{% url 'login' %}" class="nav-link">Please Login</a>
{% endif %}
{% endblock %}
